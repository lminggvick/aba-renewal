    </ul>
</header>

<script>
    /* 매물 서브메뉴 */
    $(document).ready(function(){
        $(".sub").hide();

        $("#offer-map > a").mouseenter(function(){
            $(".sub").slideDown(1000);
        });
        $("#offer-map > a").mouseleave(function(){
            $(".sub").slideUp();
        });
    });

    $(document).ready(function(){
        $(".sub").hide();

        $(".menu01 > li").mouseover(function(){
            $(this).addClass("on");
            //$(this).find(".sub").show();
        });
        $(".menu01 > li").mouseout(function(){
            $(this).removeClass("on");
            //$(".sub_mn").hide();
        });
    });

    $(document).ready(function() {
        const el = window.location.pathname.replace(/\//g, "");
        $("#" + el).addClass("active");
    })
</script>
