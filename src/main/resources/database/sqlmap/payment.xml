<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abacorp.aba.model.Payment">

    <!-- Mapper -->
    <resultMap id="payment" type="Payment">
        <id property="id" column="id" />
        <result property="price" column="price" />
        <result property="pg" column="pg" />
        <result property="method" column="method" />
        <result property="createdAt" column="created_at" typeHandler="org.apache.ibatis.type.SqlTimestampTypeHandler" />
        <association property="user" column="user_id" javaType="User" select="findUserById" />
    </resultMap>

    <resultMap id="payment_history" type="PaymentHistory">
        <id property="id" column="id" />
        <result property="createdAt" column="created_at" typeHandler="org.apache.ibatis.type.SqlTimestampTypeHandler" />
        <association property="user" column="user_id" javaType="User" select="findUserById" />
        <association property="package" column="package_id" javaType="Package" select="selectPackage" />
    </resultMap>

    <insert id="insertPayment" parameterType="payment">
        INSERT INTO payments VALUES (#{user.userId}, #{price}, #{pg}, #{method}, current_timestamp)
    </insert>

    <insert id="insertPaymentHistory" parameterType="payment">
        INSERT INTO payment_histories VALUES (#{user.userId}, #{packageId}, #{pg}, #{method}, current_timestamp)
    </insert>
</mapper>
